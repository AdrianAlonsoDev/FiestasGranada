<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:centerColor="@color/colorBlueDefault"
                android:centerX="0.09"
                android:endColor="@color/colorBlueDefault"
                android:startColor="@color/colorLightBlue"
                android:type="linear" />
            <size
                android:width="24dp"
                android:height="24dp" />
            <corners
                android:bottomLeftRadius="0.1dp"
                android:bottomRightRadius="0.1dp"
                android:topLeftRadius="6dp"
                android:topRightRadius="6dp" />

        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorBlueDefault" />
            <corners android:radius="5dp" />
        </shape>
    </item>

</layer-list>